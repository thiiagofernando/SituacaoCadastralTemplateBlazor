@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6">Situação Cadastral</MudText>
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen" Elevation="1">
        <MudNavMenu>
            <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Início</MudNavLink>
            <MudNavLink Href="consultas" Icon="@Icons.Material.Filled.Search">Realizar Consultas</MudNavLink>
            <MudNavLink Href="creditos" Icon="@Icons.Material.Filled.ShoppingCart">Comprar Crédito</MudNavLink>
            <MudNavLink Href="historico-consultas" Icon="@Icons.Material.Filled.History">Histórico de Consultas</MudNavLink>
            <MudNavLink Href="historico-pagamentos" Icon="@Icons.Material.Filled.Receipt">Histórico de Pagamentos</MudNavLink>
            <MudNavLink Href="historico-financeiro" Icon="@Icons.Material.Filled.BarChart">Histórico Financeiro</MudNavLink>
            <MudNavLink Href="duvidas" Icon="@Icons.Material.Filled.Help">Dúvidas</MudNavLink>
            <MudNavLink Href="meus-dados" Icon="@Icons.Material.Filled.Person">Meus Dados</MudNavLink>
            <MudNavLink Href="logout" Icon="@Icons.Material.Filled.ExitToApp">Sair</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
